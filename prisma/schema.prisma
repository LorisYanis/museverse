generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextIndex"]

}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Category {
  id            String @id @default(uuid())
  name          String
  bots          Bot[]
}

model Bot {
  id            String @id @default(uuid())
  userId        String
  imageSource   String
  name          String @db.Text
  description   String
  preamble      String
  seedChat      String

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  categoryId    String
  category      Category @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
}